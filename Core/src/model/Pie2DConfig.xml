<theme>
	<menu>
		<saveAsImage>存为图片</saveAsImage>
		<about>关于</about>
		<version>版本</version>
	</menu>

	<template>
        <format id='FontFormat' font='微软雅黑' size='12' color='${color}'/>
	    <pie id='Simple'>
	        <states>
	            <normal>
	                <fill color='${color}{adjustColor:1.5},${color}{adjustColor:1.2}' alpha='1,1' angle='90'/>
	            </normal>
	        </states>
	   </pie>

		<icon id='Simple'>
			<circle>
				<states>
					<normal radius='8'>
						<border alpha='0' thikness='1' color='${color}'/>
						<fill color='${color}{adjustColor:1.3},${color}' alpha='0.8,0.8' angle='90'/>
					</normal>
				</states>
			</circle>
		</icon>

        <legend id='Simple' label="${xLabel}, ${yLabel}"  position='right' enable='true' hPadding='5' vPadding='10' vMargin='2'>
        	<border color='FFFFFF' thikness='1' alpha='0'/>
			<fill color='FFFFFF' alpha='0'/>
			<icon>Simple</icon>
			<label format='FontFormat'/>
		</legend>


        <colors id='Heavy'>
			<color>#097DDA</color>
            <color>#017E01</color>
            <color>#A6403E</color>
            <color>#634BA7</color>
            <color>#9B7A15</color>
            <color>#4E555F</color>
		</colors>
		<colors id='Shallow'>
            <color>#6DCFF6</color>
            <color>#98C045</color>
            <color>#FE7C61</color>
            <color>#A085D4</color>
            <color>#FDB52F</color>
            <color>#959595</color>
		</colors>
		<colors id='RGB'>
            <color>#097DDA</color>
            <color>#728F1C</color>
            <color>#C451C8</color>
			<color>#AB8718</color>
            <color>#EF306A</color>
            <color>#4E555F</color>
            <color>#634BA7</color>
            <color>#2F8A93</color>
            <color>#FE5B3B</color>
            <color>#6DCFF6</color>
            <color>#9BD124</color>
             <color>#4AC0C0</color>
		</colors>

	</template>
	



	<styles>
	    <!--默认样式：精简版-------------------------------------------------------------------------------------->
	    <Simple animation='true'>
	        <pieSeriesStyle style='Simple'/>
	        <chartBG paddingLeft='5' paddingRight='5' paddingTop='5' paddingBottom='5' radius='10' gutterTop='5' gutterRight='5'>
	            <border color='EEEEEE'/>
	            <fill color='FFFFFF'/>
	        </chartBG>
	        
	        <valueLabel enable='true' margin='0' padding='5' text='${valueLabel}' format='FontFormat'>
	            <format color='FFFFFF' size='14'/>
	        </valueLabel>
	        
			<legend style='Simple'/>

	        <template>
	        </template>
	        
	        <colors>RGB</colors>
	    </Simple>
	    
	</styles> 
</theme>    
